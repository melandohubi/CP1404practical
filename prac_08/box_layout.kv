#:kivy 2.0.0

BoxLayout:
    orientation: 'vertical'
    spacing: 10
    padding: [10, 10, 10, 10]

    Button:
        text: 'Clear'
        on_press: app.handle_clear()

    TextInput:
        id: input_name
        text: ''
        hint_text: 'Enter your name'

    Button:
        text: 'Greet'
        on_press: app.handle_greet()

    Label:
        id: output_label
        text: ''
        color: (1, 1, 0, 1)  # Yellow text color (RGBA)
