#:kivy 2.0.0

BoxLayout:
    orientation: 'vertical'
    spacing: 10
    padding: [10, 10, 10, 10]

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        TextInput:
            id: input_number
            text: ''
            hint_text: 'Enter a number'

        Button:
            text: 'Square'
            on_press: app.handle_calculate(input_number.text)

        Label:
            id: output_label
            text: ''
            color: (1, 0, 1, 1)  # Pink text color (RGBA)

    Label:
        text: 'Enter a number and press "Square"'
